def calculate_factorial(n):
    """
    Calculates the factorial of a non-negative integer.
    """
    if n == 0:
        return 1
    else:
        return n * calculate_factorial(n - 1)

# Calculate factorial for the number 5
factorial_5 = calculate_factorial(5)
print("Factorial of 5:", factorial_5)  # Output will be 120

# Calculate factorial for the number 7
factorial_7 = calculate_factorial(7)
print("Factorial of 7:", factorial_7)  # Output will be 5040
